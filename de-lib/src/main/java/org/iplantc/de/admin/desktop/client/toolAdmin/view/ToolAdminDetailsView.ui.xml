<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
             xmlns:d="urn:import:org.iplantc.de.admin.desktop.client.toolAdmin.view.subviews"
             xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form">

    <ui:with field="appearance"
             type="org.iplantc.de.admin.desktop.client.toolAdmin.ToolAdminView.ToolAdminViewAppearance"/>

    <ui:with field="margins"
             type="com.sencha.gxt.core.client.util.Margins">
        <ui:attributes top="0" right="5" bottom="0" left="5"/>
    </ui:with>
    <ui:with field="layoutData"
             type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData">
        <ui:attributes width="1" height="-1" margins="{margins}"/>
    </ui:with>

    <container:VerticalLayoutContainer ui:field="layoutContainer">
        <container:child layoutData="{layoutData}">
            <form:FieldLabel ui:field="nameLabel">
                <form:widget>
                    <form:TextField readOnly="false"
                                    enabled="true"
                                    allowBlank="false"
                                    ui:field="nameEditor"/>
                </form:widget>
            </form:FieldLabel>
        </container:child>
        <container:child layoutData="{layoutData}">
            <form:FieldLabel text="{appearance.toolImportDescriptionLabel}">
                <form:widget>
                    <form:TextArea readOnly="false"
                                   enabled="true"
                                   ui:field="descriptionEditor"/>
                </form:widget>
            </form:FieldLabel>
        </container:child>
        <container:child layoutData="{layoutData}">
            <form:FieldLabel ui:field="typeLabel">
                <form:widget>
                    <form:TextField readOnly="true"
                                    enabled="false"
                                    ui:field="typeEditor"/>
                </form:widget>
            </form:FieldLabel>
        </container:child>
        <container:child layoutData="{layoutData}">
            <form:FieldLabel text="{appearance.toolImportAttributionLabel}">
                <form:widget>
                    <form:TextField readOnly="false"
                                    enabled="true"
                                    ui:field="attributionEditor"/>
                </form:widget>
            </form:FieldLabel>
        </container:child>
        <container:child layoutData="{layoutData}">
            <form:FieldLabel ui:field="versionLabel">
                <form:widget>
                    <form:TextField readOnly="false"
                                    enabled="true"
                                    allowBlank="false"
                                    ui:field="versionEditor"/>
                </form:widget>
            </form:FieldLabel>
        </container:child>
        <container:child layoutData="{layoutData}">
            <form:FieldLabel text="{appearance.toolImportLocationLabel}" ui:field="locationLabel">
                <form:widget>
                    <form:TextField readOnly="false"
                                    enabled="true"
                                    allowBlank="true"
                                    ui:field="locationEditor"/>
                </form:widget>
            </form:FieldLabel>
        </container:child>
        <container:child layoutData="{layoutData}">
            <form:FieldLabel text="{appearance.timeLimit}">
                <form:widget>
                    <form:IntegerField readOnly="false"
                                    enabled="true"
                                    allowBlank="true"
                                    ui:field="timeLimitEditor"/>
                </form:widget>
            </form:FieldLabel>
        </container:child>
        <container:child layoutData="{layoutData}">
            <form:FieldLabel ui:field="Restricted" text="{appearance.restricted}">
                <form:widget>
                    <form:CheckBox ui:field="restrictedEditor"/>
                </form:widget>
            </form:FieldLabel>
        </container:child>
        <container:child layoutData="{layoutData}">
            <d:ToolImplementationEditor ui:field="implementationEditor"/>
        </container:child>
        <container:child layoutData="{layoutData}">
            <d:ToolContainerEditor ui:field="containerEditor"/>
        </container:child>
    </container:VerticalLayoutContainer>
</ui:UiBinder> 
